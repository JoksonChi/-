    <style type="text/css" media="screen">
        .login-main {
            background: #fff;
            display: flex;
            justify-content: center;
            margin: 0 10px;
        }

        .login {
            width: 80%;
            max-width: 250px;
        }

            .login .login-p {
                margin: 12px 0;
                display: flex;
                justify-content: center;
            }

                .login .login-p input {
                    width: 100%;
                    line-height: 30px;
                    border: 1px solid #e5e5e5;
                    border-radius: 4px;
                    font-size: 13px;
                    padding-left: 8px;
                    font-family: "open sans","Helvetica Neue",Helvetica,Arial,sans-serif;
                }

                .login .login-p p {
                    margin-right: 10px;
                    width: 100%;
                    text-align: right;
                }

                .login .login-p p1 {
                    margin-left: 10px;
                    width: 100%;
                    text-align: left;
                }

        .login-p .btn {
            width: 100%;
            line-height: 25px;
            margin-top: 8px;
        }

        ::-webkit-input-placeholder {
            color: #999;
        }

        :-moz-placeholder {
            color: #999;
        }

        :-ms-input-placeholder {
            color: #999;
        }

        ::-moz-placeholder {
            color: #999;
