
@{
    ViewBag.Title = "Edit";
}
@model Collection
<div class="page-content">

    <div class="page-header">

    </div><!-- /.page-header -->
    <div class="row">
        <div class="col-xs-12">
            <!-- PAGE CONTENT BEGINS -->
            <!-- #section:pages/error -->

            <div style="clear:both;"></div>
            <!-- /section:pages/error -->
            <div class="ch_divone">
                <b>用户收藏信息</b>
                <form class="form-horizontal" role="form" action="/admin/Collection/save" method="post">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> 帖子创建者 </label>
                        <div class="col-sm-9">
                            <input type="text" id="form-field-1" placeholder="用户名" name="name" id="name" class="col-xs-10 col-sm-4" value="@Model.User.Name" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right" for="form-field-3"> 帖子名称 </label>
                        <div class="col-sm-9">
                            <input type="text" id="form-field-3" placeholder="账号" id="title" name="title" class="col-xs-10 col-sm-4" value="@Model.Post.Title" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right" for="form-field-5"> 收藏时间 </label>
                        <div class="col-sm-how">
                            <input type="text" id="form-field-5" placeholder="积分" id="createtime" name="createtime" class="col-xs-10 col-sm-how" value="@Model.CreateTime" />
                        </div>
                    </div>
                    <div class="clearfix form-actions">
                        <div class="col-md-offset-3 col-md-9">
                            <button class="btn btn-info" type="submit">
                                <i class="ace-icon fa fa-check bigger-110"></i>
                                提交
                            </button>

                            &nbsp; &nbsp; &nbsp;
                            <button class="btn" type="reset">
                                <i class="ace-icon fa fa-undo bigger-110"></i>
                                重置
                            </button>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>


