
@{
    ViewBag.Title = "Edit";
}
@model Post
<div class="page-content">

    <div class="page-header">

    </div><!-- /.page-header -->
    <div class="row">
        <div class="col-xs-12">
            <!-- PAGE CONTENT BEGINS -->
            <!-- #section:pages/error -->

            <div style="clear:both;"></div>
            <!-- /section:pages/error -->
            <div class="ch_divone">
                <b>帖子信息</b>
                <form class="form-horizontal" role="form" action="/admin/post/save" method="post">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> 标题 </label>
                        <div class="col-sm-9">
                            <input type="text" disabled="disabled" id="form-field-1" placeholder="标题" name="title" id="title" class="col-xs-10 col-sm-4" value="@Model.Title" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right" for="form-field-3"> 发帖用户 </label>
                        <div class="col-sm-9">
                            <input type="text" disabled="disabled" id="form-field-3" placeholder="发帖用户" id="account" name="account" class="col-xs-10 col-sm-4" value="@Model.User.Name" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right" for="form-field-5"> 发帖时间 </label>
                        <div class="col-sm-how">
                            <input type="text" disabled="disabled" id="form-field-5" placeholder="发帖时间" id="createTime" name="createTime" class="col-xs-10 col-sm-how" value="@Model.CreateTime" />
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right" for="form-field-6"> 帖子分类 </label>
                        <div class="col-sm-3">
                            @Html.DropDownList("categoryId", new SelectList(ViewBag.SeletItems, "Value", "Text"), new { @class = " col-sm-4" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right" for="form-field-6"> 是否审核 </label>
                        <div class="col-sm-3">
                            @Html.DropDownList("isfeaturedid", new SelectList(ViewBag.isfeatured, "Value", "Text"), new { @class = " col-sm-4" })
                        </div>
                    </div>
                    <div class="clearfix form-actions">
                        <div class="col-md-offset-3 col-md-9">
                            <button class="btn btn-info" type="submit">
                                <i class="ace-icon fa fa-check bigger-110"></i>
                                提交
                            </button>

                            &nbsp; &nbsp; &nbsp;
                            <button class="btn" type="reset">
                                <i class="ace-icon fa fa-undo bigger-110"></i>
                                重置
                            </button>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>
